<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - test101</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">

</head>
<body class="bg-gray-50 text-gray-900">
    <header>
        <!-- Navbar -->
        <nav class="bg-white shadow-md mb-6">
            <div class="max-w-7xl mx-auto px-2 sm:px-6 lg:px-8">
                <div class="relative flex items-center justify-between h-16">
                    <div class="absolute inset-y-0 left-0 flex items-center sm:hidden">
                        <!-- Mobile menu button -->
                        <button type="button" class="inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-gray-600 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" aria-controls="mobile-menu" aria-expanded="false">
                            <span class="sr-only">Open main menu</span>
                            <svg class="block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                            </svg>
                        </button>
                    </div>
                    <div class="flex-1 flex items-center justify-center sm:items-stretch sm:justify-start">
                        <a href="@Url.Action("Index", "Home")" class="text-2xl font-semibold text-gray-900">test101</a>
                    </div>
                    <div class="hidden sm:block sm:ml-6">
                        <div class="flex space-x-4">
                            <a href="@Url.Action("Index", "Cliente")" class="text-gray-900 hover:text-gray-600 px-3 py-2 rounded-md text-sm font-medium">Cliente</a>
                            <a href="@Url.Action("Create", "Cliente")" class="text-gray-900 hover:text-gray-600 px-3 py-2 rounded-md text-sm font-medium">Crear Cliente</a>
                            <a href="@Url.Action("Index", "Home")" class="text-gray-900 hover:text-gray-600 px-3 py-2 rounded-md text-sm font-medium">Home</a>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="max-w-7xl mx-auto px-2 sm:px-6 lg:px-8 mb-64">
        <main role="main" class="pb-8">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-gray-800 text-white py-4 fixed bottom-0 w-full text-center">
        <div class="max-w-7xl mx-auto px-2 sm:px-6 lg:px-8">
            <p >Prueba 1Cero1 Software</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
