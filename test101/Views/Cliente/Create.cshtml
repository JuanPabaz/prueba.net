@model test101.Models.Cliente

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">
    <div class="container mx-auto p-4">
        <h4 class="text-2xl font-semibold text-gray-800 mb-4">Cliente</h4>
        <hr class="mb-6 border-gray-300" />
        
        <div class="flex justify-center">
            <div class="w-full max-w-md">
                <form asp-action="Create" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4" id="formPrincipal">
                    <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>
                    
                    <div class="mb-4">
                        <label asp-for="NombreCliente" class="block text-gray-700 font-bold mb-2"></label>
                        <input asp-for="NombreCliente" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500" id="NombreCliente" />
                        <span asp-validation-for="NombreCliente" class="text-red-500 text-sm mt-1"></span>
                    </div>
                    
                    <div class="mb-4">
                        <label asp-for="DireccionCliente" class="block text-gray-700 font-bold mb-2"></label>
                        <input asp-for="DireccionCliente" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500" id="DireccionCliente" />
                        <span asp-validation-for="DireccionCliente" class="text-red-500 text-sm mt-1"></span>
                    </div>
                    
                    <div class="mb-4">
                        <label asp-for="Pdf" class="block text-gray-700 font-bold mb-2"></label>
                        <input asp-for="Pdf" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500" id="Pdf" />
                        <span asp-validation-for="Pdf" class="text-red-500 text-sm mt-1"></span>
                    </div>
                    
                    <div class="flex items-center justify-between">
                        <input type="submit" value="Create" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" />
                    </div>
                </form>
                <div class="text-center mt-4">
                    <a asp-action="Index" class="text-blue-500 hover:text-blue-700">Back to List</a>
                </div>
                <button id="viewPdfBtn" class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:ring-2 focus:ring-green-500 mt-4" onclick="mostrarPdf()">Ver PDF</button>
            </div>
        </div>
    </div>

    <!-- Modal para mostrar el PDF -->
    <div id="pdfModal" class="fixed inset-0 z-50 flex items-center justify-center bg-gray-800 bg-opacity-50 hidden">
        <div class="bg-white p-6 rounded shadow-lg max-w-2xl w-full">
            <h2 class="text-2xl font-semibold mb-4">PDF Documento</h2>
            <div class="overflow-auto max-h-[80vh]">
                <embed id="pdfEmbed" src="" class="w-full h-[70vh]" />
            </div>
            <button id="closeModalBtn" class="mt-4 bg-red-500 hover:bg-red-700 text-white py-2 px-4 rounded" onclick="cerrarModal()">Cerrar</button>
        </div>
    </div>
    <!-- Enlace al archivo form-validation.js -->
    <script src="~/js/validation.js" asp-append-version="true"></script>
    <script src="~/js/mostrarPdf.js" asp-append-version="true"></script>
</body>
</html>

