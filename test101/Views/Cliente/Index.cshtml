@model IEnumerable<test101.Models.Cliente>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="min-w-full bg-white border border-gray-200 rounded-lg shadow-sm">
    <thead>
        <tr class="bg-gray-100 border-b border-gray-300">
            <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700 uppercase tracking-wider">
                @Html.DisplayNameFor(model => model.NombreCliente)
            </th>
            <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700 uppercase tracking-wider">
                @Html.DisplayNameFor(model => model.DireccionCliente)
            </th>
            <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700 uppercase tracking-wider">
                @Html.DisplayNameFor(model => model.FechaRegistro)
            </th>
            <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700 uppercase tracking-wider">
                @Html.DisplayNameFor(model => model.Pdf)
            </th>
            <th class="px-6 py-3 text-left text-sm font-semibold text-gray-700 uppercase tracking-wider"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr class="border-b border-gray-200 hover:bg-gray-50">
                <td class="px-6 py-4 text-sm text-gray-900">
                    @Html.DisplayFor(modelItem => item.NombreCliente)
                </td>
                <td class="px-6 py-4 text-sm text-gray-900">
                    @Html.DisplayFor(modelItem => item.DireccionCliente)
                </td>
                <td class="px-6 py-4 text-sm text-gray-900">
                    @Html.DisplayFor(modelItem => item.FechaRegistro)
                </td>
                <td class="px-6 py-4 text-sm text-gray-900">
                    @Html.DisplayFor(modelItem => item.Pdf)
                </td>
                <td class="px-6 py-4 text-sm text-gray-500">
                    <a asp-action="Edit" asp-route-id="@item.IdCliente" class="text-blue-600 hover:text-blue-800 underline">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.IdCliente" class="text-blue-600 hover:text-blue-800 underline">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.IdCliente" class="text-red-600 hover:text-red-800 underline">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</body>
</html>
