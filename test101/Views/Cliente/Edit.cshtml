@model test101.Models.Cliente

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h4 class="text-lg font-medium">Cliente</h4>
<hr class="my-4" />
<div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <div>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>
            <input type="hidden" asp-for="IdCliente" />
            <div class="mb-4">
                <label asp-for="NombreCliente" class="block font-semibold"></label>
                <input asp-for="NombreCliente" class="w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
                <span asp-validation-for="NombreCliente" class="text-red-500"></span>
            </div>
            <div class="mb-4">
                <label asp-for="DireccionCliente" class="block font-semibold"></label>
                <input asp-for="DireccionCliente" class="w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
                <span asp-validation-for="DireccionCliente" class="text-red-500"></span>
            </div>
            <div class="mb-4">
                <label asp-for="FechaRegistro" class="block font-semibold"></label>
                <input asp-for="FechaRegistro" class="w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
                <span asp-validation-for="FechaRegistro" class="text-red-500"></span>
            </div>
            <div class="mb-4">
                <label asp-for="Pdf" class="block font-semibold"></label>
                <input asp-for="Pdf" class="w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
                <span asp-validation-for="Pdf" class="text-red-500"></span>
            </div>
            <div class="mb-4">
                <input type="submit" value="Save" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 focus:outline-none" />
            </div>
        </form>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Index" class="text-blue-600 hover:underline">Back to List</a>
</div>

